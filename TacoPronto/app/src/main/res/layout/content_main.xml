<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="179dp"
            android:layout_height="131dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/taco" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Size"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />
                <RadioGroup
                    android:id="@+id/groupSize"
                    android:layout_width="130dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView">

                    <RadioButton
                        android:id="@+id/rbLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Large" />

                    <RadioButton
                        android:id="@+id/rbMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medium" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="124dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Tortilla"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.654"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />
                <RadioGroup
                    android:layout_width="130dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/groupTortilla">

                    <RadioButton
                        android:id="@+id/rbCorn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Corn" />

                    <RadioButton
                        android:id="@+id/rbFlour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Flour" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout

            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fillings"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:textSize="24sp"/>
                <LinearLayout
                    android:id="@+id/linenearFillings1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/cbBeef"
                        android:layout_width="153dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="8dp"
                        android:text="Beef" />

                    <CheckBox
                        android:id="@+id/cbChicken"
                        android:layout_width="153dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="0dp"
                        android:text="Chicken" />

                    <CheckBox
                        android:id="@+id/cbWhiteFish"
                        android:layout_width="153dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="0dp"
                        android:text="White Fish" />

                    <CheckBox
                        android:id="@+id/cbCheese"
                        android:layout_width="153dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="0dp"
                        android:text="Cheese" />

                    <CheckBox
                        android:id="@+id/cbSeaFood"
                        android:layout_width="153dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="0dp"
                        android:text="Sea Food" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linenearFillings2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbRice"
                    android:layout_width="153dp"
                    android:layout_height="33dp"
                    android:text="Rice" />

                <CheckBox
                    android:id="@+id/cbBeans"
                    android:layout_width="153dp"
                    android:layout_height="33dp"
                    android:text="Beans"/>
                <CheckBox
                    android:id="@+id/cbPicoDeGallo"
                    android:layout_width="153dp"
                    android:layout_height="33dp"
                    android:text="Pico de Gallo" />
                <CheckBox
                    android:id="@+id/cbGuacamole"
                    android:layout_width="153dp"
                    android:layout_height="33dp"
                    android:text="Guacamole" />
                <CheckBox
                    android:id="@+id/cbLBT"
                    android:layout_width="153dp"
                    android:layout_height="33dp"
                    android:text="LBT"/>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beverage"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:textSize="24sp"/>
                    <LinearLayout
                        android:id="@+id/linearLayoutBeverages1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/cbSoda"
                            android:layout_width="153dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="8dp"
                            android:text="Soda"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView6" />

                        <CheckBox
                            android:id="@+id/cbCerveza"
                            android:layout_width="153dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="0dp"
                            android:text="Cerveza"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/checkBox" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutBeverages2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="46dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbMargarita"
                        android:layout_width="153dp"
                        android:layout_height="33dp"
                        android:text="Margarita"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/checkBox"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <CheckBox
                        android:id="@+id/cbTequila"
                        android:layout_width="153dp"
                        android:layout_height="33dp"
                        android:text="Tequila"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/checkBox2"
                        app:layout_constraintTop_toBottomOf="@+id/checkBox6" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>